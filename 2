total_strikes = 0

print("Година", " " * 3, "Кількість ударів")

for hour in range(16):  
    if hour == 0:
        strikes = 0  
    else:
        strikes = hour  

    total_strikes += strikes 

    print(f"{hour:2}", " " * 6, strikes)

print("\nЗагальна кількість ударів годинника від 00 до 15 год.:", total_strikes)

input("\nНатисніть Enter, щоб завершити...")
